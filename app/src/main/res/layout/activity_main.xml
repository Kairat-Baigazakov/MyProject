<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".MainActivity" >

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:src="@drawable/image_neolabs"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image"
        android:text="Neolabs"
        android:textSize="32dp"
        android:paddingLeft="56dp"
        android:paddingTop="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Learning  Coding  Mentoring"
        android:layout_below="@+id/text1"
        android:paddingLeft="56dp"
        android:paddingBottom="28dp"
        android:textSize="20dp"
        android:id="@+id/text2"/>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:id="@+id/image2"
        android:paddingLeft="50dp"
        android:src="@drawable/image_location"
        android:layout_below="@+id/text2"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bishkek, Tynystanova st. 98"
        android:layout_toRightOf="@+id/image2"
        android:layout_below="@+id/text2"
        android:paddingTop="16dp"
        android:id="@+id/text3"
        />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="22dp"
        android:id="@+id/image3"
        android:layout_below="@+id/image2"
        android:src="@drawable/clock"
        android:paddingLeft="50dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10:00AM - 8:00PM (+996-996-996-996)"
        android:id="@+id/text4"
        android:layout_below="@+id/text3"
        android:layout_toRightOf="@+id/image3"
        android:textSize="12dp"
        android:paddingTop="20dp"
        android:paddingRight="36dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/image3"
        android:gravity="center"
        android:text="Think programming is hard? Not sure where to start? Do you want to learn how to develop? If this is all about you, then you can safely come to the recruitment at the coolest educational programming club Neolabs. We will show you everything, tell you everything and grow you into a professional. Let's to coding!"
        android:paddingTop="26dp"
        android:paddingLeft="56dp"
        android:paddingRight="56dp"
        android:textSize="14dp"
        android:id="@+id/text5" />

</RelativeLayout>